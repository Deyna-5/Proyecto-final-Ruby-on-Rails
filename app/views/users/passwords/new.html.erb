<div class="container">

  <div class="jumbotron bg-light py-5 px-5">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <h2 class="text-center">¿Olvidaste tu contraseña?</h2>
      <div class="field">
        <%= f.label :email, "Escribe tu correo electronico" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.submit "Enviar instrucciones para recuperar contraseña", class: "btn btn-light" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>



