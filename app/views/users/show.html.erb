<div class="container">
       <div class="jumbotron my-5 bg-light row text-center pt-5">
              <%= image_tag current_user.avatar.variant(resize: "250x250").processed ,class: "d-inline mx-lg-5 userphoto col-xs-12 ml-sm-4" if current_user.avatar.attached?%>
              <div class="infousuario d-inline col-lg-7 col-md-12">
                     <p> <strong> Nombre: </strong> <%= current_user.name %> </p>
                     <p> <strong> Direccion: </strong> <%= current_user.address %> </p>
                     <p class="pb-5"> <strong>Email:</strong> <%= current_user.email %> </p>
              </div>
       </div>
       <%= link_to "Editar informacion de perfil", edit_user_registration_path, class: "btn btn-light" %>
</div>