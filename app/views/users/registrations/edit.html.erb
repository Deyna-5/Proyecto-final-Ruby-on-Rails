<div class="container">
  <h2 class="text-center my-5">Editar <%= resource_name.to_s.humanize %></h2>

  <div class="jumbotron bg-light">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, "Nombre"%><br />
        <%= f.text_field :name%>
      </div>

      <div class="field">
        <%= f.label :avatar, "Foto de perfil" %><br />
        <%= f.file_field :avatar%>
      </div>

      <div class="field">
        <%= f.label :email, "Correo electronico" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, "Contraseña nueva" %> <i>(Dejar en blanco si no desea editar su contraseña)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmacion de la nueva contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password, "Contraseña antigua" %> <i>(Necesitamos su contraseña actual para poder realizar los cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Actualizar", class: "btn btn-light" %>
      </div>
    <% end %>

    <h3>Eliminar mi cuenta</h3>

    <p>¿No estas contento? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>


  <%= link_to "Volver atras", :back, class: "btn btn-light" %>
</div>